<?xml version="1.0"?>
<launch>
  <!-- sync gazebo time with ros -->
  <param name="use_sim_time" value="true" />

  <!-- prototype -->
  <include file="$(find prototype_ros)/launch/quadrotor.launch" />

  <!-- control node -->
  <include file="$(find awesomo_ros)/launch/control.launch" />
  <param name="sim_mode" value="true" />
  <param name="debug_mode" value="false" />
  <param name="control_config_dir" value="$(find awesomo_configs)/configs/quadrotor_gazebosim" />

  <!-- apriltag node -->
  <include file="$(find awesomo_ros)/launch/apriltag.launch" />
  <param name="sim_mode" value="true" />
  <param name="debug_mode" value="false" />
  <param name="apriltag_config" type="str" value="$(find awesomo_configs)/configs/apriltag/prototype.yaml" />
  <param name="gimbal_track_topic" type="str" value="/prototype/gimbal/track" />
  <param name="camera_pose_topic" type="str" value="/prototype/camera/image" />
</launch>
