<?xml version="1.0"?>
<launch>
  <!-- settings -->
  <param name="sim_mode" value="false" />
  <param name="debug_mode" value="false" />
  <param name="quad_frame" value="NED" />
  <param name="fcu_type" value="DJI" />
  <param name="estimate_frame" value="BODY" />
  <param name="gimbal_imu" value="SBGC" />

  <!-- dji sdk -->
	<node pkg="dji_sdk" type="dji_sdk_node" name="dji_sdk" output="screen">
		<param name="serial_name" type="string" value="/dev/ttyUSB0"/>
		<param name="baud_rate" type="int" value="230400"/>
    <param name="app_id" type="int" value="1043630"/>
    <param name="app_version" type="int" value="1"/>
		<param name="app_bundle_id" type="string" value="Not required in this SDK version"/>
    <param name="enc_key" type="string" value="8bd7f50dc02c5e9343f1dc19afd22b44d7907dba3239ed88e77bf3c78356e8d0"/>
		<param name="groundstation_enable" type="int" value="1"/>
	</node>

  <!-- controller node -->
  <node pkg="atl_ros" name="atl_control" type="atl_control_node" output="screen" required="true">
    <param name="config_dir" value="$(find atl_configs)/configs/quadrotor_anaroid" />
    <!-- <param name="config_dir" value="$(find atl_configs)/configs/quadrotor_anastasia" /> -->
  </node>

  <!-- gimbal node -->
  <node pkg="atl_ros" name="atl_gimbal" type="atl_gimbal_node" output="screen" required="true" >
    <param name="config" value="$(find atl_configs)/configs/gimbal/config.yaml" />
    <param name="gimbal_imu" value="SBGC" />
  </node>

  <!-- gimbal camera node -->
  <node pkg="atl_ros" name="atl_camera" type="atl_pg_camera_node" output="screen" required="true">
    <!-- <param name="guid" type="str" value="0" />  <!&#45;&#45; first available camera &#45;&#45;> -->
    <!-- <param name="guid" type="str" value="49712223533654158" /> <!&#45;&#45; static camera &#45;&#45;> -->
    <param name="guid" type="str" value="49712223533992369" /> <!-- gimbal camera -->
    <param name="stamp_image" value="false" />
    <param name="image_topic" value="/atl/camera/image" />
    <param name="config_dir" value="$(find atl_configs)/configs/camera/pointgrey_firefly" />
  </node>

  <!-- <node pkg="atl_ros" name="atl_static_camera" type="atl_pg_camera_node" output="screen" required="true"> -->
  <!--   <!&#45;&#45; <param name="guid" type="str" value="0" />  <!&#38;#45;&#38;#45; first available camera &#38;#45;&#38;#45;> &#45;&#45;> -->
  <!--   <param name="guid" type="str" value="49712223533654158" /> <!&#45;&#45; static camera &#45;&#45;> -->
  <!--   <!&#45;&#45; <param name="guid" type="str" value="49712223533992369" /> <!&#38;#45;&#38;#45; gimbal camera &#38;#45;&#38;#45;> &#45;&#45;> -->
  <!--   <param name="stamp_image" value="false" /> -->
  <!--   <param name="image_topic" value="/atl/scamera/image" /> -->
  <!--   <param name="config_dir" value="$(find atl_configs)/configs/camera/pointgrey_firefly" /> -->
  <!-- </node> -->
</launch>
